# Definir os dias da semana e valores de dias passados e dia atual
dias_da_semana = ["Seg", "Ter", "Qua", "Qui", "Sex", "Sab", "Dom"]
dias_passados = 5
dia_atual = "Sab"

def proximo_dia_util(dias_passados, dia_atual):
    dias_restantes = 30 - dias_passados  # Diferença entre o tempo de renovação após o deposito e a quantos dias foi feito o deposito
    indice_dia_atual = dias_da_semana.index(dia_atual)  # Puxa o índice da lista em que se encontra o dia atual. Dias_da_semana = nome da lista, .index() puxa na lista o valor que está dendo parentese
    indice_dia_renovacao = (indice_dia_atual + dias_restantes) % 7  # Calcular o índice do dia da renovação

    if indice_dia_renovacao == 5:  # Sábado
        dias_restantes += 2
    elif indice_dia_renovacao == 6:  # Domingo
        dias_restantes += 1

    return dias_restantes

# Calcular o tempo mínimo de renovação
min_dias_espera = proximo_dia_util(dias_passados, dia_atual)
print(f"O tempo mínimo de renovação é de {min_dias_espera} dias.")
